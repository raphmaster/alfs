ONBOOT=yes
IFACE=br0
# Space separated
SERVICE="bridge ipv4-static"
IP=192.168.1.32
GATEWAY=192.168.1.1
PREFIX=24
BROADCAST=192.168.1.255
# Don't check before bridge is created
CHECK_LINK=no
# Spanning tree protocol, default no
STP=no
# Add to IFACE, space separated devices
INTERFACE_COMPONENTS="eth0"
IP_FORWARD=true